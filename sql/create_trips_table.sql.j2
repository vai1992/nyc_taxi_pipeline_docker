CREATE TABLE IF NOT EXISTS nyc.trips (
            vendor_id INTEGER,
            pickup_datetime TIMESTAMP,
            dropoff_datetime TIMESTAMP,
            passenger_count INTEGER,
            trip_distance FLOAT,
            rate_code_id INTEGER,
            pu_location_zone VARCHAR(255),
            do_location_zone VARCHAR(255),
            store_and_fwd_flag VARCHAR(255),
            payment_type INTEGER,
            fare_amount FLOAT,
            extra FLOAT,
            mta_tax FLOAT,
            tip_amount FLOAT,
            tolls_amount FLOAT,
            improvement_surcharge FLOAT,
            total_amount FLOAT,
            congestion_surcharge FLOAT,
            airport_fee FLOAT,
            trip_duration INTEGER,
            hour_of_day INTEGER,
            date STRING,
            date_hour STRING,
            year_month STRING
) ;

